<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/item_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <EditText
                        android:id="@+id/add_p_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                        android:hint="Add title"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>


                <Spinner
                    android:id="@+id/add_p_mode"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:minHeight="45dp"></Spinner>

                <Spinner
                    android:id="@+id/add_p_type_spinner"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:minHeight="45dp"></Spinner>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <EditText
                        android:id="@+id/add_p_descption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                        android:hint="Description/Details"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <EditText
                        android:id="@+id/add_p_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                        android:hint="Amount"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <EditText
                        android:id="@+id/add_p_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                        android:hint="Address"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <EditText
                        android:id="@+id/add_p_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                        android:hint="Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <EditText
                        android:id="@+id/add_p_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                        android:hint="@string/hint_email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>

                <!--  Mobile Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/add_p_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_phone_black_24dp"
                        android:hint="@string/hint_mobile"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/dob_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_date_range_black_24dp"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/hint_dob"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@android:color/white" />
                </android.support.design.widget.TextInputLayout>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/add_p_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/buttonshape"
                    android:padding="12dp"
                    android:text="Submit"
                    android:textColor="@android:color/black" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>