<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gathratechnal.nandyalcity.LogOutActivity">
    <LinearLayout
        android:id="@+id/deal_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/category_linearLayout"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:textSize="19dp"
           android:textColor="@color/colorWhite"
           android:text="Welcome To Nandyal City"
           android:gravity="center"
           android:background="@color/colorAccent"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:src="@drawable/imgshort"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:gravity="center"
            android:padding="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
