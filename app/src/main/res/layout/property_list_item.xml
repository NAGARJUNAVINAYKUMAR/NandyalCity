<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/property_list_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/property_list_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:maxHeight="170dp" />

        <TextView
            android:id="@+id/property_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_list_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="title"
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/property_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_list_title"
            android:layout_marginLeft="5dp"
            android:text="type"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_list_type"
            android:layout_marginLeft="5dp"
            android:text="addtess"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_list_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/property_list_type"
            android:layout_below="@+id/property_list_title"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:layout_marginRight="5dp"
            android:text="rs 1000/-"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_list_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/property_list_address"
            android:layout_below="@id/property_list_amount"
            android:layout_marginRight="3dp"
            android:background="@color/colorPrimary"
            android:gravity="right"
            android:padding="3dp"
            android:text="more.."
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_list_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>